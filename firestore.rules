rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user role from Firestore
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Users collection
    match /users/{userId} {
      // Admin can read/write all users
      // Users can read their own data
      allow read: if isAuthenticated() && 
                     (getUserRole() == 'Admin' || request.auth.uid == userId);
      allow write: if isAuthenticated() && getUserRole() == 'Admin';
    }
    
    // Expenses collection
    match /expenses/{expenseId} {
      // Employees can read their own expenses
      // Approvers and Admins can read all expenses
      allow read: if isAuthenticated() && 
                     (getUserRole() in ['Admin', 'Approver'] || 
                      resource.data.employeeId == request.auth.uid);
      
      // Employees can create expenses
      allow create: if isAuthenticated() && getUserRole() == 'Employee' &&
                       request.resource.data.employeeId == request.auth.uid;
      
      // Approvers can update expense status
      allow update: if isAuthenticated() && getUserRole() in ['Admin', 'Approver'];
      
      // Only admins can delete expenses
      allow delete: if isAuthenticated() && getUserRole() == 'Admin';
    }
  }
}

// Storage rules
service firebase.storage {
  match /b/{bucket}/o {
    match /bills/{fileName} {
      // Allow authenticated users to upload bills
      allow write: if request.auth != null;
      
      // Allow authenticated users to read bills
      allow read: if request.auth != null;
    }
  }
}
